pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'docker build -t employee-api .'
            }
        }
        stage('Test') {
            steps {
            sh 'make check || true'
             junit '**/target/* .xml'
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
