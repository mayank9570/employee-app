pipeline {
    agent any

    stages {
        stage('Docker Build and Tag') {
            steps {
                sh 'docker build -t employee-api .'
                sh 'docker tag employee-api mayanks95/employee-api:latest'
                sh 'docker tag employee-api mayanks95/employee-api:$BUILD_NUMBER'
            }
        }
        stage('Publish image to Docker Hub') {
            steps {
            withDockerRegistry([credentialsId: "-u mayanks95 -p mayank@9570", url: "https://hub.docker.com/repository/docker/mayanks95/employee-api" ]) {
            sh 'docker push mayanks95/employee-api:latest'
            
            sh 'docker push mayanks95/employee-api:$BUILD_NUMBER'
        }
        
          }
        }
        
        stage('Run Docker container on Jenkins Agent') {
             
            steps {
                sh "docker run -d -p 5050:5050 mayanks95/employee-api"
 
            }
        }
 
    }
}
        
       
              
          
